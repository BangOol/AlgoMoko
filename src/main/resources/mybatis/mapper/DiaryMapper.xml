<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 위 코드가 mapper 설정을 하는 코드 -->

<!-- Mapper를 사용하는 Repository의 전체 경로를 적어줘야함. -->
<mapper namespace="com.co.algomoko.diary.mapper.DiaryMapper">
<!-- 해당날짜 식단 조회 --> 
<select id="findDay" resultType="DiaryVO" parameterType="DiaryVO">
select ddname,amount, f0, cal, carb, prot, fat
from diary_detail
where to_char(ddate, 'yymmdd')='220711' and mid = 'user3'
</select>


</mapper>